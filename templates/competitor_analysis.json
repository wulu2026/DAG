{
  "name": "competitor_analysis",
  "description": "竞品分析专用模板，用于收集竞品信息、功能对比和市场定位分析",
  "tasks": {
    "collect_data": {
      "delay": 3.0,
      "message": "收集竞品信息...",
      "sources": ["竞品官网", "应用商店", "用户评论", "行业报告"]
    },
    "clean_data": {
      "delay": 1.2,
      "message": "整理竞品数据...",
      "min_duplicates": 4,
      "max_duplicates": 40,
      "min_invalid": 1,
      "max_invalid": 15
    },
    "analyze_data": {
      "delay": 3.5,
      "message": "分析竞品功能和市场定位...",
      "min_insights": 15,
      "max_insights": 30,
      "min_accuracy": 0.9,
      "max_accuracy": 0.98
    },
    "generate_report": {
      "delay": 3.0,
      "message": "生成竞品分析报告...",
      "default_save_to_file": true,
      "default_output_dir": "competitor_reports",
      "default_file_extension": ".md"
    },
    "send_email": {
      "delay": 1.0,
      "message": "发送竞品分析报告给产品团队...",
      "default_subject": "竞品分析报告"
    }
  }
}